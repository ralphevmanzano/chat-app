<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
  </style>

  <style name="Button.ChatButtonTheme" parent="Widget.MaterialComponents.Button">
    <item name="android:textAllCaps">false</item>
    <item name="android:paddingTop">12dp</item>
    <item name="android:paddingBottom">12dp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:letterSpacing">0.1</item>
    <item name="android:background">@drawable/bg_rounded</item>
  </style>

  <style name="EditText.AuthField" parent="Widget.AppCompat.EditText">
    <item name="android:backgroundTint">@color/lightGray</item>
    <item name="android:background">@drawable/bg_rounded</item>
    <item name="android:padding">12dp</item>
    <item name="android:textColor">@color/blueGray</item>
    <item name="android:letterSpacing">0.06</item>
    <item name="android:inputType">textNoSuggestions</item>
  </style>

  <style name="Text.Error" parent="TextAppearance.AppCompat">
    <item name="android:letterSpacing">0.06</item>
    <item name="android:text">@string/value_is_incorrect</item>
    <item name="android:textColor">@color/error</item>
    <item name="android:textSize">18sp</item>
    <item name="android:paddingTop">4dp</item>
    <item name="android:paddingBottom">4dp</item>
    <item name="android:paddingStart">8dp</item>
    <item name="android:paddingEnd">8dp</item>
  </style>

  <style name="Text.Terms" parent="TextAppearance.AppCompat">
    <item name="android:letterSpacing">0.06</item>
    <item name="android:textSize">16sp</item>
    <item name="android:text">@string/value_is_incorrect</item>
    <item name="android:textColor">@color/blueGray</item>
  </style>

  <style name="Button.GrayButton" parent="Widget.AppCompat.ButtonBar">
    <item name="android:background">@drawable/bg_rounded</item>
    <item name="backgroundTint">@color/darkGray</item>
    <item name="android:textSize">16sp</item>
    <item name="android:paddingTop">6dp</item>
    <item name="android:paddingBottom">6dp</item>
    <item name="android:paddingStart">12dp</item>
    <item name="android:paddingEnd">12dp</item>
    <item name="android:elevation">0dp</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:letterSpacing">0.06</item>
    <item name="android:textAllCaps">false</item>
  </style>

</resources>
